<% include ./partials/header %>

<div class="ui main text container">
	<div class="ui huge header">
		<h1>Resources for Web Development</h1>
	</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blogs.forEach(blog => { %>
				<div class="item">
					<div class="image">
						<img src="<%= blog.image %>">						
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
						<div class="meta">
							<span><%= blog.created.toDateString()%></span>	
						</div>
						<div class="description">
							<p><%- blog.body.substring(0, 100)%>...</p>
						</div>
						<div class="extra">
							<div class="btn ui animated basic violet button" tabindex="0">
                                <div class="visible content">Read More</div>
                                <div class="hidden content">
                                    <a id="readMore" href="/blogs/<%= blog.id %>"><i class="plus icon"></i></a>
                                </div>
                            </div> 
						</div>
					</div>														
				</div>
			<% }) %>
		</div>
	</div>
</div>

<% include ./partials/footer %>