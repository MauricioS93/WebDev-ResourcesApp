<% include ../partials/header %>

<div class="ui main text container">
	<div class="ui huge header">
		<h1>Resources for Web Development</h1>
	</div>
	<div>
		<form class="ui form" action="/blogs" method="GET">
			<div class="ui category search">
				<div class="ui icon input">	
					<input type="text" name="search" placeholder="Search Blog by Title or Tag...">	
				</div>
				<button class="ui blue inverted button">Search</button>
			</div>
		</form>
	</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<div class="item">
				<%if(noMatch !== undefined) {%>
					<h3> <%= noMatch %></h3>
				<%}%>
			</div>
			<% blogs.forEach(blog => { %>
				<div class="item">
					<div class="image">
						<img src="<%= blog.image %>">	
					</div>
					<div class="content">
						<div class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></div>
						<span href="#" class="ui tag label tag-indexPage"><%= blog.tag.toUpperCase() %></span>
						<div class="meta">
							<span><%= blog.created.toDateString()%></span>	
						</div>
						<div class="description">
							<p><%- blog.body.substring(0, 100)%>...</p>
						</div>
						<div class="extra">
							<div class="btn ui animated basic violet button" tabindex="0">
                                <div class="visible content">Read More</div>
                                <div class="hidden content">
                                    <a id="readMore" href="/blogs/<%= blog.id %>"><i class="plus icon"></i></a>
                                </div>
                            </div> 
						</div>
					</div>				
				</div>
			<% }) %>
		</div>
	</div>
</div>

<% include ../partials/footer %>