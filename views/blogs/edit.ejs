<% include ../partials/header%>

<div class="ui main text container segment">
        <div class="ui huge header">
            Edit Resource: <%= blog.title %>
        </div>
        <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="two fields">
                <div class="field">
                    <label> Title </label>
                    <input type="text" name="blog[title]" value="<%= blog.title %>">
                </div>
                <div class="field">
                    <label for="tag">Tag</label>
                    <input type="text" id="tag" name="blog[tag]" placeholder="CSS, CS, JS, Ruby" required>
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label for="image"> Image </label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="field">
                    <label for="link">Source URL</label>
                    <input type="text" id="link" name="blog[link]" placeholder="Paste the resource url here...">
                </div>
            </div>
            <div class="field">
                <label> Description </label>
                <textarea rows="5" name="blog[body]" > <%= blog.body %> </textarea>
            </div>
            <button class="ui blue big inverted button">Edit</button>
        </form>
    </div>

<% include ../partials/footer%>
