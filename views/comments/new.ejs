<% include ../partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header">
        Add New Comment to: <%= blog.title %>
    </div>
    <form class="ui form" action="/blogs/<%= blog._id %>/comments" method="POST">
        <div class="field">
            <label>New Comment</label>
            <textarea rows="2" name="comment[text]" placeholder="Type your comment here..."></textarea>
        </div>
        <div class="field">
            <label> Author </label>
            <input type="text" name="comment[author]" placeholder="Author">
        </div>
        <button class="ui blue big inverted button">Create</button>
    </form>
    <a href="/blogs/<%= blog._id %>">Back</a>
</div>

<% include ../partials/footer%>
